{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ES2017",
    "module": "es6",
    "sourceMap": false,
    "strictNullChecks": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": false
}
